{% set navLinks = {
        'main': {'title': 'Главная', 'path': url_for('main')},
        'urls': {'title': 'Сайты', 'path': url_for('urls')}
    } %}
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Анализатор страниц</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    </head>
    <body class="min-vh-100 d-flex flex-column">
        <header class="flex-shrink-0">
            <nav class="navbar navbar-expand-md navbar-dark bg-dark px-3">
                <a class="navbar-brand" href="{{ url_for('main') }}">Анализатор страниц</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        {% for navLink in navLinks %}
                            <li class="nav-item">
                                <a class="nav-link{% if navLink.path == current_url() %} active{% endif %}" href="{{ navLink.path }}">{{ navLink.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </nav>
        </header>
        <main class="flex-grow-1">
            {% set flashMessages = flash.getMessages() %}
            {% if flashMessages.result is defined %}
            <div class="alert alert-success" role="alert">
            {% for message in flashMessages.result %}
                {{ message }}
            {% endfor %}
            </div>
            {% endif %}
            {% if flashMessages.errors is defined %}
            <div class="alert alert-danger" role="alert">
            {% for message in flashMessages.errors %}
                {{ message }}
            {% endfor %}
            </div>
            {% endif %}
            <div class="container-lg mt-3">
            {% block body %}{% endblock %}
            </div>
        </main>
        <footer class="border-top py-3 mt-5 flex-shrink-0">
            <div class="container-lg">
                <div class="text-center">
                    <a href="https://hexlet.io/pages/about" target="_blank">Hexlet</a>
                </div>
            </div>
        </footer>
    </body>
</html>
